<!DOCTYPE html>
<html lang="en">
<body>
<wicket:extend>
	<!-- MENU -->
    <div class="navbar-wrapper">
      <div class="container">		  
		  <div wicket:id="facturarOnLineMenu"></div>
      </div>
    </div>

    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->
    <div class="container marketing">
		
		<div class="panel panel-default">
			<div class="panel-heading">
				<h2 class="panel-title">
					<img src="images/reportes.png" alt="Reportes"/>
					Reportes
					<small>Totales por Evento - Detalles de facturas y solicitudes de facturas pendientes</small>
				</h2>
			</div>
			<div class="panel-body">
    
    			<div class="row alert alert-warning">
    				<div class="row">
					  <div class="col-md-7">Evento: <strong><span wicket:id="evento">evento</span></strong></div>
					  <div class="col-md-3">Fecha: <span wicket:id="fecha">fecha</span></div>
					  <div class="col-md-2">Estado: <span wicket:id="cerrado">cerrado</span></div>
					</div>
					<table class="table text-center table-bordered">
						<thead>
							<tr>
								<td><strong>Total Evento sin IVA</strong></td>
								<td><strong>Total Facturado sin IVA</strong></td>
								<td><strong>Pendiente de Facturaci&oacute;n</strong></td>
								<td><strong>Diferencia</strong></td>
								<td class="text-info"><strong>Facturado con IVA</strong></td>
								<td class="text-info"><strong>Total Pagado con IVA</strong></td>
								<td class="text-info"><strong>Diferencia</strong></td>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td><span wicket:id="totalEventoSinIVA">totalEventoSinIVA</span></td>
								<td><span wicket:id="totalFacturadoSinIVA">totalFacturadoSinIVA</span></td>
								<td><span wicket:id="pendienteFacturacion">pendienteFacturacion</span></td>
								<td><strong><span wicket:id="diferencia">diferencia</span></strong></td>
								<td class="text-info"><span wicket:id="facturadoConIVA">facturadoConIVA</span></td>
								<td class="text-info"><span wicket:id="totalPagadoConIVA">totalPagadoConIVA</span></td>
								<td class="text-info"><strong><span wicket:id="rentabilidad">rentabilidad</span></strong></td>
							</tr>
						</tbody>
					</table>
				</div>
					
	            <div class="row">
	            	<button wicket:id="generarExcel" class="btn btn-default btn-sm pull-right" role="button" data-toggle="modal">Exportar reporte <span class="glyphicon glyphicon-cloud-download"></span></button>
	            	<div>
					  	<h2><small>Facturas Venta</small></h2>
					</div>
					<div wicket:id="dataContainerFacturas">
						<table class="table">
							<thead>
								<tr>
									<td><b>Fecha</b></td>
									<td><b>Nro. Factura</b></td>
									<td class="text-center"><b>Tipo Factura</b></td>
									<td class="text-right"><b>Total sin IVA</b></td>
									<td class="text-right"><b>IVA</b></td>
									<td class="text-right"><b>Total con IVA</b></td>
								</tr>
							</thead>
							<tbody>
								<tr wicket:id="listaFacturas">
									<td><span wicket:id="fecha">fecha</span></td>
									<td><span wicket:id="nroFactura">nroFactura</span></td>
									<td class="text-center"><span wicket:id="tipoFactura">tipoFactura</span></td>
									<td class="text-right"><span wicket:id="totalSinIVA" class="text-default"></span></td>
									<td class="text-right"><span wicket:id="iva" class="text-default"></span></td>
									<td class="text-right"><span wicket:id="totalConIVA" class="text-default"></span></td>
								</tr>
								<tr class="active">
									<td><strong>Total Facturado</strong></td>
									<td>-</td>
									<td class="text-center">-</td>
									<td class="text-right"><strong><span wicket:id="sumaTotalSinIVA"></span></strong></td>
									<td class="text-right"><strong><span wicket:id="sumaTotalIVA"></span></strong></td>
									<td class="text-right"><strong><span wicket:id="sumaTotalConIVA"></span></strong></td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				
				<div class="row">
	            	<div>
					  	<h2><small>Solicitudes Factura Venta Pendientes</small></h2>
					</div>
					<div wicket:id="dataContainerSolicitudes">
						<table class="table">
							<thead>
								<tr>
									<td><b>Fecha</b></td>
									<td><b>Nro. Solicitud</b></td>
									<td><b>Solicitante</b></td>
									<td class="text-center"><b>Tipo Factura</b></td>
									<td class="text-right"><b>Total sin IVA</b></td>
								</tr>
							</thead>
							<tbody>
								<tr wicket:id="listaSolicitudesFactura">
									<td><span wicket:id="fecha">fecha</span></td>
									<td><span wicket:id="nroSolicitud">nroSolicitud</span></td>
									<td><span wicket:id="solicitante">solicitante</span></td>
									<td class="text-center"><span wicket:id="tipoFactura">tipoFactura</span></td>
									<td class="text-right"><span wicket:id="totalSinIVA" class="text-default"></span></td>
								</tr>
								<tr class="active">
									<td><strong>Pendiente de Facturaci&oacute;n</strong></td>
									<td>-</td>
									<td>-</td>
									<td class="text-center">-</td>
									<td class="text-right"><strong><span wicket:id="sumaTotalSinIVA"></span></strong></td>									
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				
				<a href="totalesEvento" class="btn btn-default pull-right">Volver</a>
			</div>
		</div>

    </div><!-- /.container -->
		
</wicket:extend>
</body>
</html>