<!DOCTYPE html>
<html lang="en">
<body>
<wicket:extend>
	<!-- MENU -->
    <div class="navbar-wrapper">
      <div class="container">		  
		  <div wicket:id="facturarOnLineMenu"></div>
      </div>
    </div>
					
    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->
    <div class="container marketing">
    
		<div wicket:id="alerta" class="alert alert-success alert-dismissable">
		  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		  <span wicket:id="textoAlerta">Alerta.</span>
		</div>
		
		<div class="panel panel-default">
			<div class="panel-heading">
				<div class="row">
					<div class="col-md-11">
						<h2 class="panel-title">
							<img src="images/reportes.png" alt="Reportes"/>
							Reportes
							<small>Totales por Evento</small>					
						</h2>
					</div>
				</div>
			</div>
			<div class="panel-body">
				
				<div class="panel panel-default">
                    <div class="panel-body">                        
                        <form class="form-inline" wicket:id="form">                        
							<div class="form-group col-sm-4">
								<input type="text" wicket:id="filtroEvento" class="form-control" placeholder="Cliente / Evento" autocomplete="off">
							</div>
							<div class="form-group col-sm-1">
								<h6>
									<a wicket:id="buscar" href="#"><small>Buscar</small></a>
								</h6>
							</div>
							<div class="form-group col-sm-4">
								<h6>
									<a wicket:id="todosEventos" href="#"><small>Borrar</small></a>
								</h6>
							</div>
							<div class="form-group col-sm-1 checkbox" data-toggle="tooltip" title="Trae cerrados y cumplidos tambi&eacute;n">
							<!-- <div class="form-group col-sm-1 checkbox" data-toggle="tooltip" title="Si CostoTotalConIVA>0 y CostoTotalConIVA = Pagado y es Cumplido"> -->
								<label class="alert-info">
									<input type="checkbox" wicket:id="verTodos"><span><small><em>Ver todos</em></small></span>
								</label>
							</div>
							
                        </form>   
                        <div class="pull-right">
								<button wicket:id="generarExcel" class="btn btn-default btn-sm" role="button" data-toggle="modal">Exportar reporte <span class="glyphicon glyphicon-cloud-download"></span></button>
						</div>                     
                    </div>
                </div>
				
				
				<div wicket:id="dataContainer">
				
					<table class="table table-bordered table-hover table-condensed text-right">
						<thead>
							<tr>
								<td class="text-left"><strong>Cliente</strong></td>
								<td class="text-left"><strong>Evento</strong></td>
								<td class="text-center"><strong>Fecha</strong></td>
								<td class="text-center"><strong>Resp.</strong></td>
								<td><strong>Venta Total<br>sin IVA</strong></td>
								<td class="text-danger"><strong>Costo Total<br>sin IVA</strong></td>
								<td class="alert-warning"><strong>Costo Total <br>con IVA</strong></td>
								<td class="alert-warning"><strong>Pagado</strong></td>
								<td class="alert-warning"><strong>Saldo Costos</strong></td>
								<td class="text-center"><strong data-toggle="tooltip" title="Si sumaFacturasVenta = VentaTotalSinIVA">Cum-<br>plido</strong></td>
								<td class="text-center"><b>Pagos</b></td>
								<td class="text-center"><strong>Ce-<br>rrado</strong></td>
							</tr>
						</thead>
						<tbody>
							<tr wicket:id="listaEventos">
								<td class="text-left"><span wicket:id="cliente" data-toggle="tooltip" title="Cliente">cliente</span></td>
								<td class="text-left"><span wicket:id="evento" data-toggle="tooltip" title="Evento">evento</span></td>
								<td class="text-center"><small><span wicket:id="fecha" data-toggle="tooltip" title="Fecha">fecha</span></small></td>
								<td class="text-center"><small><span wicket:id="responsable" data-toggle="tooltip" title="Responsable">responsable</span></small></td>
								<td class="text-right"><span wicket:id="totalEvento" data-toggle="tooltip" title="Venta total sin IVA">totalEvento</span></td>
								<td class="text-danger text-right"><span wicket:id="costoTotal" data-toggle="tooltip" title="Costo total sin IVA">costoTotal</span></td>
								<td class="alert-warning text-right"><span wicket:id="costoTotalConIVA" data-toggle="tooltip" title="Costo total con IVA">costoTotalConIVA</span></td>
								<td class="alert-warning text-right"><span wicket:id="pagadoTotal" data-toggle="tooltip" title="Pagado">pagadoTotal</span></td>
								<td class="alert-warning text-right"><b><span wicket:id="pendienteTotal" data-toggle="tooltip" title="Saldo Costos">pendienteTotal</span></b></td>
								<td class="text-center">
									<a class="btn btn-success btn-xs" wicket:id="verDetallesFacturas" href="#" data-toggle="tooltip" title="Ver Detalles Facturado"><small><span wicket:id="cumplido">cumplido</span></small></a>
								</td>
								<td class="text-center">
									<a class="btn btn-success btn-xs" wicket:id="verDetallesPagos" href="#" data-toggle="tooltip" title="Ver Detalles Pagado"><span class="glyphicon glyphicon-zoom-in"></span></a>
								</td>
								<td class="text-center"><small><span wicket:id="cerrado" data-toggle="tooltip" title="Cerrado">cerrado</span></small></td>
							</tr>	
							<tr class="active">
								<td class="text-left"><strong>TOTALES</strong></td>
								<td></td>
								<td></td>
								<td></td>
								<td><strong><span wicket:id="sumaTotalEvento" data-toggle="tooltip" title="Venta total sin IVA"></span></strong></td>
								<td class="text-danger"><strong><span wicket:id="sumaCostoTotal" data-toggle="tooltip" title="Costo total sin IVA"></span></strong></td>
								<td class="alert-warning"><strong><span wicket:id="sumaCostoTotalConIVA" data-toggle="tooltip" title="Costo total con IVA"></span></strong></td>
								<td class="alert-warning"><strong><span wicket:id="sumaPagadoTotal" data-toggle="tooltip" title="Pagado"></span></strong></td>
								<td class="alert-warning"><strong><span wicket:id="sumaPendienteTotal" data-toggle="tooltip" title="Saldo Costos"></span></strong></td>
								<td class="text-center">-</td>
								<td class="text-center">-</td>
								<td class="text-center">-</td>
							</tr>								
						</tbody>
					</table>
					
				</div>
				
				<a href="inicio" class="btn btn-default pull-right">Volver</a>
			</div>
		</div>

    </div><!-- /.container -->
		
</wicket:extend>
</body>
</html>