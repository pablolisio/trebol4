<!DOCTYPE html>
<html lang="en">
<body>
<wicket:extend>
	<!-- MENU -->
    <div class="navbar-wrapper">
      <div class="container">		  
		  <div wicket:id="facturarOnLineMenu"></div>
      </div>
    </div>

    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->
    <div class="container marketing">
		
		<div class="panel panel-default">
			<div class="panel-heading">
				<h2 class="panel-title">
					<img src="images/ordenesPago-64.png" alt="OrdenesPago"/>
					Ordenes de Pago
					<small><span>Detalle</span></small>
				</h2>
			</div>
			<div class="panel-body" style="width: 70%;">
				  
				    <div wicket:id="ordenPagoEliminadaContainer" class="alertNotificaciones alert-danger">
					  <p class="text-center">
							Esta Orden de Pago esta eliminada...
					  </p>
					</div>
				  
				  <table class="table table-hover">
					<tr>
						<td><label class="control-label">Nro. OP</label></td>
						<td><span wicket:id="nroOP" class="text-default"></span></td>
					</tr>
					<tr>
						<td><label class="control-label">Fecha OP</label></td>
						<td><span wicket:id="fechaOP" class="text-default"></span></td>
					</tr>
					<tr>
						<td><label class="control-label">Proveedor</label></td>
						<td><span wicket:id="prov" class="text-default"></span></td>
					</tr>
					<tr>
						<td><label class="control-label">Solicitado Por</label></td>
						<td><span wicket:id="solicitadoPor" class="text-default"></span></td>
					</tr>
					<tr>
						<td>
							<label class="control-label">Evento</label>
						</td>
						<td>
							<span wicket:id="evento" class="text-default"></span>
							<a href="#" wicket:id="editarEvento" class="btn btn-info btn-xs">Modificar</a>
						</td>
					</tr>
					<tr>
						<td><label class="control-label">Concepto</label></td>
						<td><span wicket:id="concepto" class="text-default"></span></td>
					</tr>
					<tr>
						<td><label class="control-label">Referencia</label></td>
						<td>
							<span wicket:id="sinFactura" class="text-warning"></span>
							<div wicket:id="facturasContainer">
							  	  <table class="table table-hover">
									<thead>
										<tr>
											<td class="col-xs-1"><b>Tipo y Nro Factura</b></td>
											<td class="col-xs-3"><b>Detalle</b></td>
										</tr>
									</thead>
									<tbody>
										<tr wicket:id="listaFacturas">
											<td>
												<span wicket:id="tipo"></span>
											</td>
											<td>
												<span wicket:id="detalle"></span>
											</td>
										</tr>
									</tbody>
								  </table>
								
							  </div>
							  <div class="alert alert-info pull-right">
								  <label class="control-label">Total Facturas: </label>
								  <span wicket:id="totalFacturas" class="text-default"></span>
							  </div>
						</td>
					</tr>
					<tr>
						<td><label class="control-label">Forma Pago</label></td>
						<td>
						
							<div wicket:id="pagosContainer">
							  	  <table class="table table-hover">
									<thead>
										<tr>
											<td class="col-xs-1"><b>Tipo</b></td>
											<td class="col-xs-3"><b>Detalle</b></td>
										</tr>
									</thead>
									<tbody>
										<tr wicket:id="listaPagos">
											<td>
												<span wicket:id="tipo" class="text-default"></span>
											</td>
											<td>
												<span wicket:id="detalle" class="text-default"></span>
											</td>
										</tr>
									</tbody>
								</table>
							  </div>
							  <p class="alert alert-info pull-right">
								  <label class="control-label">Total Pagado: </label>
								  <span wicket:id="totalAPagar" class="text-default"></span>
							  </p>
						</td>
					</tr>
					<tr>
						<td><label class="control-label">Solicitud Pago Asociada</label></td>
						<td>
							<div wicket:id="solicitudPagoContainer">
						  	  <span wicket:id="detalleSolicitudPago" class="text-default"></span>
						  	  <small><a href="#" wicket:id="linkSolicitudPago">Ver m&aacute;s <span class="glyphicon glyphicon-share-alt"></span></a></small>
						  	</div>
						  	<em><small><span wicket:id="sinSolicitudPago" class="text-muted">sinSolicitudPago</span></small></em>
						</td>
					</tr>
				  </table>
				  
				  <div class="pull-right">
				  	<button wicket:id="crearFactura" class="btn btn-danger btn-sm" role="button" data-toggle="modal">Crear Factura correspondiente</button>
				  	<button wicket:id="crearOP" class="btn btn-danger btn-sm" role="button" data-toggle="modal">Crear OP por el faltante de pago</button>
				  	<button wicket:id="generarExcel" class="btn btn-primary btn-sm" role="button" data-toggle="modal">Generar Excel <span class="glyphicon glyphicon-cloud-download"></span></button>
					<a href="ordenesPago" class="btn btn-info btn-sm">Volver</a>
				  </div>		
					
			</div>
		</div>

    </div><!-- /.container -->
	
</wicket:extend>
</body>
</html>